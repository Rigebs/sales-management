<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SalesManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SalesManagement" parent="Base.Theme.SalesManagement" />

    <style name="Base" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>

        <item name="colorSurface">@color/white</item>

        <item name="colorPrimaryContainer">@color/primary</item>

        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorOutline">@color/primary_light</item>

        <item name="colorSecondaryContainer">@color/primary_light</item>
    </style>

    <style name="MyActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.SalesManagement.Splash" parent="Theme.SplashScreen">
        <!-- Fondo del splash -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Icono animado de splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>

        <!-- Tema a aplicar despuÃ©s del splash -->
        <item name="postSplashScreenTheme">@style/Base</item>
    </style>
</resources>